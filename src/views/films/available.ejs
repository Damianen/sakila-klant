<div class="mx-auto flex flex-col gap-10 max-w-7xl items-center justify-between gap-x-6 p-6 lg:px-8">
<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-white">Users</h1>
      <p class="mt-2 text-sm text-gray-300">A list of all the users in your account including their name, title, email and role.</p>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="relative min-w-full divide-y divide-white/15">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-3">Adress</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">District</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">City</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Postal Code</th>
              <th scope="col" class="py-3.5 pl-3 pr-4 sm:pr-3">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-gray-900">
            <% if (items && items.length) { %>
            <% items.forEach(function (row) { %>
            <tr class="even:bg-gray-800/50">
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-3"><%= row.address %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= row.district %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= row.city %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= row.postal_code %></td>
              <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
                <form method="post" action="/reservations/<%= row.inventory_id %>" ><button class="text-indigo-400 hover:text-indigo-300" type="submit">reserveren</button></form>
              </td>
            </tr>
            <% }) %>
            <% } else { %>
            <tr>
              <td colspan="5" class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-3">No stores with available copies found.</td>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
