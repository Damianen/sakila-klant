<div class="mx-auto flex flex-col gap-10 max-w-7xl items-center justify-between gap-x-6 p-6 lg:px-8">
<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-white">Reservations</h1>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="relative min-w-full divide-y divide-white/15">
          <thead>
            <tr>
              <th scope="col" class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-400 sm:pl-0">Start Date</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-400">End Date</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-400">Status</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-400">Notes</th>
              <th scope="col" class="py-3 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/10 bg-gray-900">
            <% if (items && items.length > 0) { %>
              <% items.forEach(function(item) { %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-0"><%= item.start_date.toISOString().slice(0, 19).replace('T', ' ') %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= item.end_date.toISOString().slice(0, 19).replace('T', ' ') %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= item.status %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-400"><%= item.notes || '' %></td>
                <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                  <form method="post" action="/reservations/<%= item.reservation_id %>/delete" ><button class="text-indigo-400 hover:text-indigo-300" type="submit">Cancel</button></form>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <td colspan="6" class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-white sm:pl-3">No reservations found.</td>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
